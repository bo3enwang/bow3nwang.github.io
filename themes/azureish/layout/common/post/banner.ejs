<% if (post.link) { %>
	<a href="<%- url_for(post.link) %>" target="_blank" itemprop="url" style="background-image: url(<%- post.banner %>)">
    </a>
<% } else if (post.title) { %>
	<% if (index) { %>
		<a href="<%- url_for(post.path) %>" itemprop="url" style="background-image: url(<%- post.banner %>)">
        </a>
	<% } else { %>
		<img src="<%- post.banner %>" class="article-banner" />
	<% } %>
<% } %>

